@import ../common-data.gspec

@objects
    title           h4
    description     p

@groups
    (note_element, note_elements)       title, description

@set
    note_vertical_margin    ~ 11px
    note_horizontal_margin  ~ 16px
    note_elements_distance  ~ 4px


= Note =
    | &note_elements should be more or less readable
    | &note_elements should stretch to parent with ${note_horizontal_margin} margin
    | &note_elements sides are vertically inside parent with ${note_vertical_margin} margin
    | &note_elements are aligned vertically above each other with ${note_elements_distance} margin
    
